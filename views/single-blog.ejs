<!DOCTYPE html>
<html lang="en">


<%- include('partials/categoryHead.ejs')  %> 

<body>
    <%- include('partials/header.ejs')  %> 


    <!-- ABOUT PROMO START HERE -->
    <div class="promo-area" style="background-image: url(images/banner/inner-top.jpg)">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="promo-text">
                        <h2>single blog page</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ABOUT PROMO END HERE -->

    <!-- BREADCRUMB START HERE -->
    <div class="about-breadcrumb">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item"><a href="#">blog</a>
                        </li>
                        <li class="breadcrumb-item active">Single Blog page</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- BREADCRUMB END HERE -->

    <!-- SINGLE POST START HERE -->
    <main class="single-blog-post main-content">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-12">
                    <!-- SINGLE ARTICLE START HERE -->
                    <div class="single-article">
                        <div class="blog-thumb">
                            <div class="overly-bg"><img src="/images/uploads/<%= post.cover %>" alt="">
                            </div>
                            <!-- <div class="thubm-caption">
                                <span>10 best <br> website design</span>
                            </div> -->
                        </div>
                        <div class="s-article-details">
                            <h3 class="blog-headline">
                                <%= post.title %>
                            </h3>
                            <div class="blog-meta">
                                <span><i class="fa fa-user"></i><a href="#"><%= post.author %></a></span>
                                <span><i class="fa fa-clock-o"></i><a href="#"><%= post.createdAt.toString().substring(0,15) %></a></span>
                                <span><%= post.tags %></span>
                            </div>
                            <p>
                                <%= post.content %> 
                            </p>
                            <img class="img-fluid"  style="margin-left: 120px;height: auto; width: 400px;" src="/images/uploads/<%= post.image %>" alt="">

                        </div>
                    </div>
                    <!-- SINGLE ARTICLE END HERE -->
                    <div class="article-share">
                        <div class="article-s-list">
                            <ul>
                                <li>share on:</li>
                                <li class="fb"><a href="https://www.facebook.com/sharer/sharer.php?u=example.org" target="_blank"><i class="fa fa-facebook-square"></i>facebook</a>
                                </li>
                    
                                <li class="tw"><a href="https://twitter.com/share?ref_src=twsrc%5Etfw" data-show-count="false"><i class="fa fa-twitter"></i>twitter</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- SINGLE ARTICLE PAGINATION -->
                    <div class="article-pagination">
                        <ul>
                        <% for(var i=0;i<=posts.length-1;i++) {%> 
                            <% if(posts[i].id == post.id && i == posts.length-1) {%> 
                                <li class="pull-left"><a href="/blog/<%= posts[i-1].id %>"><span><i class="fa fa-angle-left"></i></span>previous</a>
                                </li>
                            <% } %>
                            <% if(posts[i].id == post.id && i == 0) {%> 
                                <li class="pull-right"><a href="/blog/<%= posts[i+1].id %>">next<span><i class="fa fa-angle-right"></i></span></a>
                                </li>
                            <% } %>    
                            <% if(posts[i].id == post.id && i!=0 && i!=posts.length-1) {%> 
                                <li class="pull-left"><a href="/blog/<%= posts[i-1].id %>"><span><i class="fa fa-angle-left"></i></span>previous</a>
                                </li>
                                <li class="pull-right"><a href="/blog/<%= posts[i+1].id %>">next<span><i class="fa fa-angle-right"></i></span></a>
                                </li>
                            <% } %> 
                        <% } %> 
                        </ul>
                    </div>
                    <!-- SINGLE ARTICLE COMMENT -->
                    <div class="comment-area">
                        <h3 class="comment-heading">comments <span><i class="fa fa-comment-o"></i><%= post.comments.length %></span></h3>
                        <ol class="comment-wrap">
                        <% for(var i=0;i<=post.comments.length-1;i++) {%> 
                            <li>
                                <div class="single-comment">
                                    <div class="comment-thumb">
                                        <% if(post.comments[i].user.profilePhoto){ %>
                                                <img src="/images/uploads/<%= post.comments[i].user.profilePhoto %>" alt="">
                                        <% }else{ %>  
                                            <img src="/images/avatar/img-1.jpg" alt="">
                                        <% } %> 
                                    </div>
                                    <div class="comment-txt">
                                        <h4 class="name"><a href="#"><%= post.comments[i].date.toString().substring(0,15) %></a></h4>
                                        <p><%= post.comments[i].comment %></p>
                                        <!-- <a href="#" class="comment-btn"><i class="fa fa-reply" aria-hidden="true"></i>reply</a> -->
                                    </div>
                                </div>
                            </li>
                        <% } %> 
                        </ol>
                    </div>
                    <!-- SINGLE ARTICLE COMMENT -->

                    <!-- ADD A COMMENT -->
                    <div class="add-comment">
                        <h3 class="comment-heading">add a comment</h3>
                        <div class="ac-wrap">
                            <form autocomplete="off" action="/blog/comment/<%= post.id %>" method="POST">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <textarea name="comment" placeholder="Message"></textarea>
                                        <button type="submit" class="custom-btn">submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- SINGLE ARTICLE END HERE -->

                <div class="col-md-4 col-sm-12">
                    <!-- SIDEBAR AREA START HERE -->
                    <aside class="sidebar">
                        <div class="sidebar-widget">
                            <form action="#" class="search-box">
                                <input type="text" placeholder="Searching kyeword here">
                                <button type="search"><i class="fa fa-search"></i>
                                </button>
                            </form>
                        </div>
                        <!-- Search Widget End -->
                        <div class="sidebar-widget">
                            <h3 class="widget-title">categories</h3>
                            <ul>
                                <% for(var i=0;i<=categories.length-1;i++) {%> 
                                    <li><a href="#"><%= categories[i].category %></a>
                                    </li>
                                <% } %> 
                            </ul>
                        </div>
                        <!-- Categories Widget End -->

                        <div class="sidebar-widget">
                            <h3 class="widget-title">Popular Post</h3>
                            <div class="popular-post">
                            <% for(var i=0;i<=posts.length-1;i++) {%> 
                            <% if(posts[i].popular == true) {%> 
                                <div class="single-popular">
                                    <a href="/blog/<%= posts[i].id %>"><img src="/images/uploads/<%= posts[i].cover %>" alt="">
                                    </a>
                                    <div class="pp-details">
                                        <h4><a href="/blog/<%= posts[i].id %>"><%= posts[i].title %></a></h4>
                                        <span><i class="fa fa-comment-o"></i><%= posts[i].comments.length %></span>
                                        <!-- <span><i class="fa fa-thumbs-o-up"></i> 450</span> -->
                                    </div>
                                </div>
                            <% } %> 
                            <% } %> 
                            </div>
                        </div>
                        <!-- Popular Post Widget End -->
                        <!-- Archives Widget End -->

                        <div class="sidebar-widget">
                            <h3 class="widget-title">Follow us</h3>
                            <div class="follow-us">
                                <div class="single-follow">
                                    <div class="follow-icon">
                                        <span><i class="fa fa-facebook"></i></span>
                                        <h4>256065 <span>likes</span></h4>
                                    </div>
                                    <button class="follow-btn fb">like</button>
                                </div>
                                <div class="single-follow">
                                    <div class="follow-icon">
                                        <span><i class="fa fa-twitter"></i></span>
                                        <h4>24355 <span>followers</span></h4>
                                    </div>
                                    <button class="follow-btn tw">follow</button>
                                </div>
                                <div class="single-follow">
                                    <div class="follow-icon">
                                        <span><i class="fa fa-youtube-play"></i></span>
                                        <h4>6065 <span>subscribers</span></h4>
                                    </div>
                                    <button class="follow-btn yt">subscribe</button>
                                </div>
                            </div>
                        </div>
                        <!-- Follow Us Widget End -->
                        <div class="sidebar-widget">
                            <h3 class="widget-title">tags</h3>
                            <div class="tagclouds">
                                <% for(var i=0;i<=tags.length-1;i++) {%> 
                                    <a href="#"><%= tags[i].tag %></a>
                                <% } %> 
                            </div>
                        </div>
                        <!-- Tag Widget End -->
                    </aside>
                    <!-- SIDEBAR AREA END HERE -->
                </div>
            </div>
        </div>
    </main>
    <!-- BLOG PAGE END HERE -->

    <%- include('partials/footer.ejs') %> 
    <%- include('partials/foot.ejs') %> 
</body>


